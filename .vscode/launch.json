{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\serve",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 5858,
            "outFiles": []
        },
        {
      "name": "1 Launch index.html with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceRoot}/index.html",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "2 Launch chrome with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "3 Launch chrome ext with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
      "runtimeArgs": ["--new-window", "--user-data-dir=c:\\temp\\chromeuserdata", "--disable-session-crashed-bubble"],
      "port": 9222
    },
    {
      "name": "4 Attach with sourcemaps",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "5 Launch Chrome against localhost, with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "6 chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
      "runtimeArgs": [
        "--new-window",
        "--user-data-dir=c:\\temp\\chromeuserdata",
        "--disable-session-crashed-bubble"
      ],
      "port": 9222
    },
    {
      "name": "7 Attach to Chrome, with sourcemaps",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "8 Canary",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "runtimeExecutable": "C:\\Users\\Jos\\AppData\\Local\\Google\\Chrome SxS\\Application\\chrome.exe",
      "runtimeArgs": ["--user-data-dir=c:\\temp\\chromeuserdata", "--disable-session-crashed-bubble"],
      "port": 9222
    }
    ]
}